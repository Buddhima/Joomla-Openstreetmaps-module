MOD_OSMOD_DESCRIPTION="Add Featured OpenStreetMaps."

MOD_OSMOD_H_PIN="Pin configuration "
MOD_OSMOD_PIN="Select pin"
MOD_OSMOD_PIN_DESC="Select the last option if wonna use your own."
MOD_OSMOD_OWNPIN="own"
MOD_OSMOD_NOPIN="on pin"

MOD_OSMOD_PINPATH="Own pin"
MOD_OSMOD_PINPATH_DESC="Path to your pin (only if 'own' is selected)."

MOD_OSMOD_PINSIZE="Pin size"
MOD_OSMOD_PINSIZE_DESC="Dimensions of the picture in px. The delimiter is 'x'. Example: '24x24'"

MOD_OSMOD_PINSHADOWPATH="Shadow"
MOD_OSMOD_PINSHADOWPATH_DESC="Path to the image of the shadow of your pin."

MOD_OSMOD_PINSHADOWSIZE="Shadow size"
MOD_OSMOD_PINSHADOWSIZE_DESC="Dimensions of the picture in px. The delimiter is 'x'. Example: '24x24'"

MOD_OSMOD_PINOFFSET="Pin point offset"
MOD_OSMOD_PINOFFSET_DESC="The position on the pin image, where the pin hits the map. 0x0 ist the top-left corner. Example: crosshairs = center of the image"

MOD_OSMOD_PINPOPUPOFFSET="Popup offset"
MOD_OSMOD_PINPOPUPOFFSET_DESC="The position on the pin image, where the popup hits the pin. 0x0 ist the pin point."

MOD_OSMOD_POSITION="Start position"
MOD_OSMOD_LON="Longitude"
MOD_OSMOD_LON_DESC="Pin position LON"
MOD_OSMOD_LAT="Latitude"
MOD_OSMOD_LAT_DESC="Pin position LAT"

MOD_OSMOD_HPOPUP="Popup"
MOD_OSMOD_POPUP="Show popup"
MOD_OSMOD_KLICK="show on klick"
MOD_OSMOD_ALWAYS="show always"
MOD_OSMOD_NEVER="no popup"
MOD_OSMOD_POPUP_DESC="Show a popup window if you klick to the pin."
MOD_OSMOD_POPUPTEXT="Text in Popup"
MOD_OSMOD_POPUPTEXT_DESC="HTML is alowed"

MOD_OSMAP="Map configuration සිතියමේ සංස්කරණය"
